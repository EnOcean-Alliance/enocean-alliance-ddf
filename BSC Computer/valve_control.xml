<?xml version="1.0" encoding="utf-8"?>
<Enocean_Devices
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../ReCom_Device_Description_Schema.xsd"
	schemaVersion="1.3">
	
	<!--article number = prototype number -->
	<Device Product_ID="0x001600000001">
		<Name>eTronic</Name>
		<Description>to close and open water valve</Description>
		<Firmware_Version>1.0.0</Firmware_Version>
		<Hardware_Version>1.0.0</Hardware_Version>
		<Frequency>868</Frequency>
		<TX>
			<EURID>
				<EEP>
					<Rorg>0xD1</Rorg>
				</EEP>
				<!-- payload after Rorg: 0x01 60 01 -->
				<MSC>
					<Bitfield>
					  <Field name="ValveState" offset="24" bitSize="1">
					    <EnumValue value="0" meaning="opened"/>
					    <EnumValue value="1" meaning="closed"/>
					  </Field>
					</Bitfield>
				</MSC>
			</EURID>
		</TX>
		<RX>
			<EEP>
				<Rorg>0xD1</Rorg>
			</EEP>
			<!-- payload after Rorg: 0x01 60 01 -->
			<MSC>
				<Bitfield>
				  <Field name="ValveState" offset="24" bitSize="1">
				    <EnumValue value="0" meaning="to_open"/>
				    <EnumValue value="1" meaning="to_close"/>
				  </Field>
				</Bitfield>
			</MSC>
		</RX>
	</Device>
</Enocean_Devices>
