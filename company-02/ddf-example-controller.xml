              <Min>0</Min>
              <Max>4294967296</Max>
            </Range>
            <Scale>
              <Min>0</Min>
              <Max>4294967296</Max>
            </Scale>
            <Unit>ms</Unit>
          </Scaled>
        </Param>
      </Parameters>
      <Links>
        <LinkEntry Direction="Inbound">
          <EEP>
            <Rorg>0xA5</Rorg>
            <Func>0x02</Func>
            <Type>0x07</Type>
          </EEP>
          <Param index="0"/>
          <Applications>
            <App>
              <Description>Default</Description>
              <Parameters>
                <Param index="0">
                  <ConfigValue>600</ConfigValue>
                </Param>
              </Parameters>
            </App>
            <App>
              <Description>Office</Description>
              <Parameters>
                <Param index="0">
                  <ConfigValue>60</ConfigValue>
                </Param>
