      </Applications>
    </Device_Parameters>
    <Index_Linked_Parameters>
      <Parameters>
        <Param index="0" accessLevel="readWrite" recommendedUserLevel="user">
          <Description>Occupancy Timeout</Description>
          <Scaled>
            <Length_In_Bytes>4</Length_In_Bytes>
            <Default_Value>600</Default_Value>
